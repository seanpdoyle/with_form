<%= flash.notice %>

<%= form_with(scope: :widget, method: :get) do |form| %>
  <%= form.label(:text_field) %>
  <%= form.text_field(:text_field) %>

  <hr>

  <%= form.label(:text_area_field) %>
  <%= form.text_area(:text_area_field) %>

  <hr>

  <%= form.label(:select_field) %>
  <%= form.select(:select_field, [
    "Bad",
    "Good",
    "Great",
  ]) %>

  <hr>

  <%= form.label(:multiple_select_field) %>
  <%= form.select(:multiple_select_field, [
    "Bad",
    "Good",
    "Great",
  ], {}, multiple: true) %>

  <hr>

  <%= form.label(:single_checkbox_field) %>
  <%= form.check_box(:single_checkbox_field) %>

  <%= form.label(:checked_single_checkbox_field) %>
  <%= form.check_box(:checked_single_checkbox_field, checked: true) %>

  <%= form.label(:checkbox_field) %>
  <%= form.collection_check_boxes(
    :checkbox_field,
    [
      "Ruby",
      "Java",
    ],
    :to_s,
    :to_s,
  ) do |builder| %>
    <%= builder.label %>
    <%= builder.check_box(checked: builder.value == "Java") %>
  <% end %>

  <hr>

  <%= form.label(:radio_field) %>
  <%= form.collection_radio_buttons(
    :radio_field,
    [
      "Up",
      "Down",
    ],
    :to_s,
    :to_s,
  ) %>

  <hr>

  <%= form.label(:file_field) %>
  <%= form.file_field(:file_field) %>

  <%= form.submit %>

  <%= form.submit translate("helpers.submit.widget.create") %>
<% end %>
